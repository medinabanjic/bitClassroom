# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      @controllers.Application.index()

# checks user login
GET         /users/login           @controllers.Users.login()
POST        /users/                @controllers.Users.checkLogin()

# popup email
GET         /users/email           @controllers.Users.sendEmail()

# registers new user
GET         /users/register        @controllers.Users.register()
POST        /users/register        @controllers.Users.saveUser()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)
